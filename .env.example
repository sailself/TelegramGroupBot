## Required
BOT_TOKEN=
GEMINI_API_KEY=

## Database
DATABASE_URL=sqlite:///bot.db

## Telegram runtime
RATE_LIMIT_SECONDS=15
MODEL_SELECTION_TIMEOUT=30
DEFAULT_Q_MODEL=gemini
TELEGRAM_MAX_LENGTH=4000
USER_HISTORY_MESSAGE_COUNT=200
LOG_LEVEL=info

## Access control
WHITELIST_FILE_PATH=allowed_chat.txt
ACCESS_CONTROLLED_COMMANDS=/tldr,/factcheck,/profileme

## Gemini settings
GEMINI_MODEL=gemini-2.0-flash
GEMINI_PRO_MODEL=gemini-2.5-pro-exp-03-25
GEMINI_IMAGE_MODEL=gemini-3-pro-image-preview
GEMINI_VIDEO_MODEL=veo-3.1-generate-preview
GEMINI_TEMPERATURE=0.7
GEMINI_TOP_K=40
GEMINI_TOP_P=0.95
GEMINI_MAX_OUTPUT_TOKENS=2048
GEMINI_THINKING_LEVEL=high
GEMINI_SAFETY_SETTINGS=permissive

## OpenRouter (optional)
ENABLE_OPENROUTER=true
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_ALPHA_BASE_URL=https://openrouter.ai/api/alpha
OPENROUTER_TEMPERATURE=0.7
OPENROUTER_TOP_K=40
OPENROUTER_TOP_P=0.95
OPENROUTER_MODELS_CONFIG_PATH=openrouter_models.json

## Agent runtime
AGENT_PROVIDER=gemini
SKILLS_DIR=skills
AGENT_WORKSPACE_ROOT=agent_workspace
AGENT_WORKSPACE_SEPARATE_BY_CHAT=true
AGENT_MODEL=
AGENT_MAX_TOOL_ITERATIONS=4
AGENT_MAX_ACTIVE_SKILLS=3
AGENT_SKILL_CANDIDATE_LIMIT=8
AGENT_MEMORY_ENABLED=true
AGENT_MEMORY_RECALL_LIMIT=5
AGENT_MEMORY_MAX_CONTEXT_CHARS=2500
AGENT_MEMORY_MIN_RELEVANCE=0.15
AGENT_MEMORY_SAVE_SUMMARY_CHARS=240
AGENT_HYGIENE_ENABLED=true
AGENT_HYGIENE_INTERVAL_SECONDS=43200
AGENT_MEMORY_RETENTION_DAYS=90
AGENT_SESSION_RETENTION_DAYS=30
AGENT_PROMPT_MAX_FILE_CHARS=20000
AGENT_PROMPT_INCLUDE_AGENTS=true
AGENT_PROMPT_INCLUDE_MEMORY_MD=true
AGENT_PROMPT_INCLUDE_SKILLS_INDEX=true
AGENT_TOOL_POLICY_ENFORCED=true
AGENT_TOOL_ALLOWLIST=read_file,write_file,edit_file,exec,web_search,memory_store,memory_recall,memory_forget
AGENT_TOOL_DENYLIST=
AGENT_EXEC_ALLOWLIST_REGEX=
AGENT_EXEC_TIMEOUT_SECONDS=60
AGENT_EXEC_MAX_OUTPUT_CHARS=10000
AGENT_EXEC_RESTRICT_TO_WORKSPACE=true
AGENT_EXEC_DENY_PATTERNS=
AGENT_REQUIRE_CONFIRMATION_FOR_WRITE=true
AGENT_REQUIRE_CONFIRMATION_FOR_EDIT=true
AGENT_REQUIRE_CONFIRMATION_FOR_EXEC=true

## OpenRouter legacy model hints (used if JSON is missing)
LLAMA_MODEL=
GROK_MODEL=
QWEN_MODEL=
DEEPSEEK_MODEL=
GPT_MODEL=

## Search and retrieval (optional)
ENABLE_BRAVE_SEARCH=true
BRAVE_SEARCH_API_KEY=
BRAVE_SEARCH_ENDPOINT=https://api.search.brave.com/res/v1/web/search
ENABLE_EXA_SEARCH=true
EXA_API_KEY=
EXA_SEARCH_ENDPOINT=https://api.exa.ai/search
ENABLE_JINA_MCP=false
JINA_AI_API_KEY=
JINA_SEARCH_ENDPOINT=https://s.jina.ai/search
JINA_READER_ENDPOINT=https://r.jina.ai/
WEB_SEARCH_PROVIDERS=brave,exa,jina
WEB_SEARCH_CACHE_TTL_SECONDS=900

## Hosting and publishing (optional)
TELEGRAPH_ACCESS_TOKEN=
TELEGRAPH_AUTHOR_NAME=
TELEGRAPH_AUTHOR_URL=
CWD_PW_API_KEY=

## Support message
SUPPORT_MESSAGE=Thanks for supporting the bot! Tap the button below to open the support page.
SUPPORT_LINK=
